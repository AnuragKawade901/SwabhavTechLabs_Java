package com.aurionpro.employee.test;

import java.time.LocalDate;
import java.util.Arrays;
import java.util.Comparator;
import java.util.List;

import com.aurionpro.employee.model.Employee;

public class EmployeeTest {
public static void main(String[] args) {
	List<Employee> employees = Arrays.asList( new Employee("Anurag", 90000, LocalDate.of(2020, 1, 15), "Male"),
            new Employee("Sneha", 95000, LocalDate.of(2019, 3, 10), "Female"),
            new Employee("John", 105000, LocalDate.of(2018, 7, 25), "Male"),
            new Employee("Priya", 87000, LocalDate.of(2021, 5, 20), "Female"),
            new Employee("Ravi", 97000, LocalDate.of(2017, 11, 5), "Male"));
	
	//Maximum Salary
	//	students.stream().sorted((Comparator.comparing((Student s) -> s.name).reversed())).forEach(System.out::println);

	Employee maxSalary = employees.stream().max(Comparator.comparingDouble(emp -> emp.salary)).orElse(null);
    System.out.println("Max Salary Employee: " + maxSalary);
    
    //second hight salary
    Employee secondMaxSalary = employees.stream().sorted(Comparator.comparingDouble((Employee sal)-> sal.salary).reversed()).skip(1).findFirst().orElse(null);
    System.out.println("Second Highest Salary Employee: " + secondMaxSalary);

}
}
