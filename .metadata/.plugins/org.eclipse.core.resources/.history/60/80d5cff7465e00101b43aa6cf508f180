//		System.out.println("Modifier is: "+Modifier.toString(meth.getModifiers()));
//	}
//s	Constructor[] cons
//	for(Constructor<?> cons : c.getDeclaredConstructors()) {
//		System.out.println("Constructor name: "+ cons.getName());
